{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/miniso-ui",
    "packages/miniso-tools",
    "packages/miniso-ut-demo",
    "packages/miniso-ut-docs"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "build:component": "lerna run --scope @miniso/miniso-ui build",
    "preview": "lerna run --scope @miniso/miniso-ut-demo dev:h5",
    "docs": "lerna run --scope @miniso/miniso-ut-docs dev",
    "clean": "lerna clean",
    "clean:all": "workspaces run clean",
    "prepare": "husky install",
    "lint": "lint-staged --allow-empty"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.19.1",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@rollup/plugin-commonjs": "^21.0.2",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.38.1",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-config-taro": "3.4.4",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.1",
    "lerna": "^5.5.2",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "prettier-eslint-cli": "^7.1.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.79.1",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-filesize": "^9.1.2",
    "rollup-plugin-progress": "^1.1.2",
    "rollup-plugin-typescript2": "^0.34.1",
    "typescript": "^4.8.4"
  },
  "lint-staged": {
    "packages/**/!(*.min).js": [
      "prettier --write",
      "eslint --fix --ignore-path .eslintignore"
    ],
    "packages/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix --ignore-path .eslintignore"
    ],
    "packages/**/*.{ts,js,tsx,jsx,html,css,scss,sass,stylus}": [
      "prettier --write"
    ]
  },
  "dependencies": {}
}

{
  "compilerOptions": {
    "target": "es5",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "module": "ESNext",
    "declaration": true,
    //  "declarationDir": "types",
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
  },
  "compileOnSave": false,
  "exclude": ["node_modules/*", "dist/*"],
  "include": ["src/**/*", "../miniso-tools/src/hooks/useConstCallback.ts"]
}
